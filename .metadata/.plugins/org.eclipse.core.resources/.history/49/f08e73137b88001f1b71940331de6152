    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
    <style>
        /* Aggiungi eventuali stili personalizzati qui */
        .chat-container {
            display: none; /* Nascondi inizialmente */
        }
    </style>
</head>
<body class="bg-gray-100 font-sans">
    <div class="flex h-screen">
        <!-- Sidebar -->
        <div class="w-full md:w-1/3 bg-gradient-to-r from-blue-500 to-purple-600 p-5 text-white overflow-y-auto">
            <h5 class="text-xl font-bold mb-4">Chats</h5>
            <div class="space-y-3">
                <div class="user-card cursor-pointer hover:bg-blue-700 p-3 rounded-lg" onclick="openChat('User 1', 'Ciao! Come stai?')">
                    <div class="flex items-center">
                        <img src="https://via.placeholder.com/50" alt="user-img" class="rounded-full mr-3">
                        <div>
                            <h6>User 1</h6>
                            <small class="text-gray-300">Ultimo messaggio...</small>
                        </div>
                    </div>
                </div>
                <div class="user-card cursor-pointer hover:bg-blue-700 p-3 rounded-lg" onclick="openChat('User 2', 'Pronto per stasera?')">
                    <div class="flex items-center">
                        <img src="https://via.placeholder.com/50" alt="user-img" class="rounded-full mr-3">
                        <div>
                            <h6>User 2</h6>
                            <small class="text-gray-300">Ultimo messaggio...</small>
                        </div>
                    </div>
                </div>
                <div class="user-card cursor-pointer hover:bg-blue-700 p-3 rounded-lg" onclick="openChat('User 3', 'Ciao!')">
                    <div class="flex items-center">
                        <img src="https://via.placeholder.com/50" alt="user-img" class="rounded-full mr-3">
                        <div>
                            <h6>User 3</h6>
                            <small class="text-gray-300">Ultimo messaggio...</small>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Sezione Chat -->
        <div class="chat-container w-full md:w-2/3 flex flex-col">
            <div class="bg-white p-5 shadow-md flex items-center justify-between">
                <div class="flex items-center">
                    <img src="https://via.placeholder.com/50" alt="user-img" class="rounded-full mr-3">
                    <h5 id="activeUserName" class="text-lg">Active User</h5>
                </div>
                <div>
                    <i class="bi bi-three-dots-vertical"></i>
                </div>
            </div>

            <div class="chat-body flex-grow p-5 overflow-y-auto bg-gray-200">
                <div id="chatBody" class="space-y-4">
                    <!-- I messaggi verranno inseriti qui -->
                </div>
            </div>

            <div class="bg-white p-3 flex items-center">
                <input type="text" class="flex-grow border border-gray-300 rounded-full py-2 px-4" placeholder="Scrivi un messaggio...">
                <button class="ml-3 bg-blue-500 text-white rounded-full px-4 py-2 hover:bg-blue-600">
                    Invia
                </button>
            </div>
        </div>
    </div>

    <!-- Pulsante Indietro -->
    <button class="absolute top-4 left-4 bg-gray-500 text-white rounded px-3 py-2 hidden" id="backButton" onclick="backToChats()">Indietro</button>

    <script>
        function openChat(userName, firstMessage) {
            // Nascondi la sidebar e mostra la sezione chat
            document.querySelector('.chat-container').style.display = 'flex';
            document.querySelector('.w-1\\/3').style.display = 'none';
            document.getElementById('activeUserName').textContent = userName;

            // Popola i messaggi della chat
            document.getElementById('chatBody').innerHTML = `
                <div class="flex justify-start">
                    <div class="bg-gray-300 rounded-lg p-3">
                        <span>${firstMessage}</span>
                        <small class="block text-gray-500 text-sm">12:00</small>
                    </div>
                </div>
                <div class="flex justify-end">
                    <div class="bg-blue-500 text-white rounded-lg p-3">
                        <span>Sto bene, grazie! E tu?</span>
                        <small class="block text-gray-200 text-sm">12:01</small>
                    </div>
                </div>
            `;

            // Mostra il pulsante Indietro
            document.getElementById('backButton').style.display = 'block';
        }

        function backToChats() {
            // Nascondi la sezione chat e mostra la sidebar
            document.querySelector('.chat-container').style.display = 'none';
            document.querySelector('.w-1\\/3').style.display = 'block';
            // Nascondi il pulsante Indietro
            document.getElementById('backButton').style.display = 'none';
        }
    </script>
</body>
</html>
